        "# --- Sentiment Analysis using VADER & TextBlob ---\n",
        "import nltk\n",
        "from nltk.sentiment import SentimentIntensityAnalyzer\n",
        "from textblob import TextBlob\n",
        "\n",
        "# Download VADER lexicon (only once)\n",
        "nltk.download('vader_lexicon')\n",
        "\n",
        "# Sentence to test\n",
        "sentence = \"Awesome, I totally love waiting in traffic for hours.\"\n",
        "\n",
        "# --- VADER Sentiment ---\n",
        "sia = SentimentIntensityAnalyzer()\n",
        "vader_score = sia.polarity_scores(sentence)\n",
        "print(\"VADER Sentiment Scores:\", vader_score)\n",
        "\n",
        "# --- TextBlob Sentiment ---\n",
        "blob = TextBlob(sentence)\n",
        "print(\"TextBlob Sentiment:\", blob.sentiment)\n"
